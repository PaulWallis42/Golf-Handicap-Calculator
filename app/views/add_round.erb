  <div class="jumbotron text-center">
    <blockquote>
      <p>The harder you practice, the luckier you get.</p>
      <footer>Gary Player</footer>
    </blockquote>

    <% if session[:email] %>
    <form method='post' action='/round'>
      <label>Course:</label>
      <select name='course'>
        <option value="Oak Park">Oak Park</option>
      </select>
      <label>Date:</label>
      <input id="date" type='text' placeholder='eg 25/12/2016' name='date'>
      <label>Score:</label>
      <input id="score" type='text' placeholder='eg 72' name='score'>
      <input id='round-button' type='submit' value='Submit'>
    </form>
    <% else %>
    <h2>You must sign in to add a round</h2>
    <% end %>
  </div>

    <script src="/rounds-scripts.js"></script>
