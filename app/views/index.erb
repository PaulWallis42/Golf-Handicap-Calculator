<% if @user %>
  <%= "Welcome to golf tracker #{@user.name}" %>
  <a href="/round/new">Add a round</a>
  <a href="/users/<%= @user.id %>">Profile Page</a>
<% end %>

<% if flash[:holes] %>
  <%= flash[:holes] %>
<% end %>

<% if @winning_round %>
  <h1><%= "Results of #{@winning_round.course} on #{@winning_round.date.strftime("%d/%m/%Y")}" %></h1>
  <h3><%= "Stroke Play winner: #{@winning_user.name} with score of #{@winning_round.score}" %></h3>
<% end %>
